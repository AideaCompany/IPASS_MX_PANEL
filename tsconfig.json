{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/components/*": ["components/*"],
      "@/providers/*": ["providers/*"],
      "@/types/*": ["types/*"],
      "@/graphql/*": ["graphql/*"],
      "@/utils/*": ["utils/*"],
      "@/i18n/*": ["i18n/*"],
      "@/services/*": ["services/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/Auth/ProtectRoute.ts",
    "components/Auth/ProtectRoute.tsx",
    "components/DiagramaLocation/ButtonEdge.js"
  ],
  "exclude": ["node_modules"]
}
